<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="247dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="130dp"
                app:srcCompat="@android:drawable/sym_def_app_icon" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/editTextText19"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="Name:" />

            <EditText
                android:id="@+id/editTextText21"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="Veronica" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/editTextText22"
                android:layout_width="175dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="Surname:" />

            <EditText
                android:id="@+id/editTextText23"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="Lukanina" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/sym_action_call" />

            <EditText
                android:id="@+id/editTextPhone3"
                android:layout_width="325dp"
                android:layout_height="70dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone"
                android:text="8 (800) 555-35-35" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>